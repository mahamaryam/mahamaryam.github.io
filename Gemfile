source "https://rubygems.org"

# Use GitHub Pages gem to match the build environment
gem "github-pages", group: :jekyll_plugins

# Include this if you use it in _config.yml
gem "jekyll-include-cache"

# Optional: if you use pagination or sitemap plugins locally
gem "jekyll-paginate"
gem "jekyll-sitemap"
gem "jekyll-gist"

# Windows compatibility (safe to keep)
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", "~> 0.1.1"
end

# For JRuby
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]

